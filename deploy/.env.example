# Production Environment Variables
# Copy this to .env and fill in values (or use fetch-secrets.sh)
# DO NOT COMMIT .env - it contains secrets

# Database
DATABASE_URL=postgresql://postgres:YOUR_STRONG_PASSWORD@db:5432/bloaty
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD

# Redis
REDIS_URL=redis://redis:6379/0

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Session security (generate with: openssl rand -hex 32)
SESSION_SECRET_KEY=your-64-char-hex-string-here
SESSION_COOKIE_SECURE=true

# Backup configuration (used by backup.sh)
BACKUP_S3_BUCKET=bloaty-backups-XXXXX
AWS_REGION=us-east-1
